                        "type": "string",
                        "format": "binary"
                    }
                },
                "type": "object"
            },
            "StoreFolderRequest": {
                "properties": {
                    "folder_name": {
                        "description": "Название дочерней папки",
                        "type": "string",
                        "example": "Documents"
                    }
                },
                "type": "object"
            },
            "UpdateFileRequest": {
                "properties": {
                    "name": {
                        "description": "Новое имя файла",
                        "type": "string",
                        "example": "Новое имя"
                    }
                },
                "type": "object"
            },
            "FileResource": {
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "name_without_ext": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "size": {
                        "type": "string"
                    },
                    "mime_type": {
                        "type": "string"
                    },
                    "shared_url": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "FolderResource": {
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "parent_id": {
                        "type": "number"
                    },
                    "parent_name": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "FolderWithAttachmentsResource": {
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "parent_id": {
                        "type": "number"
                    },
                    "folders": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/FolderResource"
                        }
                    },
                    "files": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/FileResource"
                        }
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "home_folder_id": {
                        "type": "number"
                    }
                },
                "type": "object"
            }
